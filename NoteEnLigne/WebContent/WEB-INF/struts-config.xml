<?xml version="1.0" encoding="ISO-8859-1"?>
<struts-config>


<!-- ================================================ Form Bean Definitions -->

    <form-beans>

        <form-bean
            name="WelcomeForm"
            type="fr.paris10.miage.gnote.univcmp.actionform"/>
     
 
    </form-beans>


<!-- ========================================= Global Exception Definitions -->

    <global-exceptions>
        <!-- sample exception handler
        <exception
            key="expired.password"
            type="app.ExpiredPasswordException"
            path="/changePassword.jsp"/>
        end sample -->
    </global-exceptions>


<!-- =========================================== Global Forward Definitions -->

    <global-forwards>
        <!-- Default forward to "Welcome" action -->
        <!-- Demonstrates using index.jsp to forward -->
        <forward
            name="welcome"
            path="/Welcome.do"/>
    </global-forwards>


<!-- =========================================== Action Mapping Definitions -->

    <action-mappings>
            <!-- Default "Welcome" action -->
            <!-- Forwards to Welcome.jsp -->
       <action
            path="/Welcome"
            forward="/pages/log/Welcome.jsp"/> 
            
        

  

        <action
            path="/InputSubmit"
            type="fr.paris10.miage.gnote.univcmp.controleur.loginAction"
            name="WelcomeForm"
            scope="request"
            attribute="login"
            input="/pages/log/Welcome.jsp">
            <forward name="success" path="/pages/log/loginSucess.jsp"></forward>
            <forward name="erreur" path="/pages/erreur/erreurlog.jsp"></forward>
           </action>  
           
    </action-mappings>


<!-- ======================================== Message Resources Definitions -->

    <message-resources parameter="MessageResources_fr_FR" />


<!-- =============================================== Plug Ins Configuration -->

  


  <!-- =================================================== Validator plugin -->

  <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
    <set-property
        property="pathnames"
        value="/org/apache/struts/validator/validator-rules.xml,
               /WEB-INF/validation.xml"/>
  </plug-in>

</struts-config>

