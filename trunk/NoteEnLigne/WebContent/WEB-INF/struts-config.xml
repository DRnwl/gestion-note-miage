<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE struts-config PUBLIC 
    "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
    "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd"> 

<struts-config>


<!-- ================================================ Form Bean Definitions -->

    <form-beans>

        <form-bean name="LoginForm" type="fr.paris10.miage.gnote.univcmp.actionform.LoginForm"/>
 
    </form-beans>


<!-- ========================================= Global Exception Definitions -->

    <global-exceptions>
        <!-- sample exception handler
        <exception
            key="expired.password"
            type="app.ExpiredPasswordException"
            path="/changePassword.jsp"/>
        end sample -->
    </global-exceptions>


<!-- =========================================== Global Forward Definitions -->

    <global-forwards>
        <!-- Default forward to "Welcome" action -->
        <!-- Demonstrates using index.jsp to forward -->
        <forward
            name="welcome"
            path="/Welcome.do"/>
    </global-forwards>


<!-- =========================================== Action Mapping Definitions -->

    <action-mappings>
            <!-- Default "Welcome" action -->
            <!-- Forwards to Welcome.jsp -->
        <action path="/Welcome" forward="/pages/log/Welcome.jsp" />



  <action path="/Authentification" 
		type="fr.paris10.miage.gnote.univcmp.actions.LoginAction"
		name="LoginForm"
		input="/pages/log/Welcome.jsp"
			scope="request">
			  <forward name="enseignant" path="/pages/log/accueilenseignant.jsp"></forward>
			  <forward name="etudiant" path="/pages/log/etudiant.jsp"></forward>
			  <forward name="seretariat" path="/pages/log/secretariat.jsp"></forward>
            <forward name="erreur" path="/pages/erreur/erreurlog.jsp"></forward>
           </action>  
 </action-mappings> 
<!-- ======================================== Message Resources Definitions -->

    <message-resources parameter="MessageResources_fr_FR" />


<!-- =============================================== Plug Ins Configuration -->

  


  <!-- =================================================== Validator plugin -->
 <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property
            property="pathnames"
            value="/WEB-INF/validator-rules.xml,/WEB-INF/validation.xml"/>
    </plug-in>

</struts-config>

